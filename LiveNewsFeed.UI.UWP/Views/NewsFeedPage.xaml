<Page x:Class="LiveNewsFeed.UI.UWP.Views.NewsFeedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:LiveNewsFeed.UI.UWP.ViewModels"
      xmlns:ext="using:Microsoft.Toolkit.Uwp.UI.Extensions"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d"
      Background="{ThemeResource CustomAcrylicBackgroundBrush}"
      ext:TitleBarExtensions.ButtonBackgroundColor="Transparent"
      DataContext="{x:Bind ViewModel}">

    <Page.BottomAppBar>
        <CommandBar Background="{ThemeResource CustomAcrylicElementBrush}"
                    OverflowButtonVisibility="Collapsed"
                    DefaultLabelPosition="Right">
            <AppBarButton x:Uid="NewsFeed_OpenSettingsButton"
                          Style="{StaticResource AppBarButtonRevealStyle}"
                          Icon="Setting"
                          IsEnabled="False" />
            <AppBarButton x:Uid="NewsFeed_RefreshFeedButton"
                          Style="{StaticResource AppBarButtonRevealStyle}"
                          Icon="Refresh"
                          Command="{x:Bind ViewModel.RefreshNewsFeedCommand}" />
        </CommandBar>
    </Page.BottomAppBar>
    
    <Grid>
        <Grid.Resources>
            <CollectionViewSource x:Key="PostsViewSource"
                                  IsSourceGrouped="False"
                                  Source="{x:Bind ViewModel.ArticlePosts, Mode=OneWay}"/>
        </Grid.Resources>
        <!--  News Feed  -->
        <GridView SelectionMode="None"
                  Padding="0 90 0 40"
                  Margin="0 0 0 -40"
                  Visibility="{x:Bind Path=ViewModel.PostsLoading,
                                      Mode=TwoWay,
                                      Converter={StaticResource InverseBoolToVisibilityConverter}}"
                  ItemsSource="{Binding Source={StaticResource PostsViewSource}}">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel Orientation="Vertical" CacheLength="1" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>

            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="25 5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </GridView.ItemContainerStyle>

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="vm:NewsArticlePostViewModel">
                    <Grid HorizontalAlignment="Stretch"
                          Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!--  Article post  -->  
                        <StackPanel Orientation="Vertical"
                                    Grid.Column="0">
                            <!--  Data source Title and logo  -->
                            <Grid Margin="0 0 0 5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Height="20"
                                        Width="20"
                                        Margin="0 0 5 0"
                                        Background="{x:Bind NewsFeedLogo}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="2" />
                                <TextBlock Grid.Column="1" Text="{x:Bind Title}"
                                           HorizontalTextAlignment="Left"
                                           FontWeight="Bold"
                                           FontSize="14"/>
                                <TextBlock Grid.Column="2"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           FontSize="12"
                                           FontWeight="Light"
                                           Text="{x:Bind PublishTime}"/>
                            </Grid>

                            <!--  Article post image % content  -->
                            <Grid Margin="0 5 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--  Article post image  -->  
                                <Image Grid.Column="0"
                                       MaxWidth="180"
                                       Margin="0 0 10 0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Visibility="{x:Bind Path=ImageUrl, Converter={StaticResource NullToVisibilityConverter}}"
                                       ToolTipService.ToolTip="{x:Bind ImageTitle}">
                                    <Image.Source>
                                        <BitmapImage UriSource="{x:Bind ImageUrl}"/>
                                    </Image.Source>
                                </Image>

                                <!--  Article post Content  -->
                                <TextBlock Grid.Column="1"
                                           Text="{x:Bind Content}"
                                           TextWrapping="Wrap"
                                           TextAlignment="Justify"
                                           IsTextSelectionEnabled="True"/>
                            </Grid>

                            <!--  Tags  -->
                            <!--<GridView ItemsSource="{x:Bind Tags}"
                                      Padding="0 5 5 0">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Padding="4 -10"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>

                                <GridView.ItemContainerStyle>
                                    <Style TargetType="GridViewItem">
                                        <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                                    </Style>
                                </GridView.ItemContainerStyle>

                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:TagViewModel">
                                        <Grid Margin="5 0">
                                            <TextBlock Text="{x:Bind Name}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </Grid>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>-->
                            <ItemsControl ItemsSource="{x:Bind Tags}"
                                          Margin="0 10 5 0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:TagViewModel">
                                        <Button Margin="0 0 5 0"
                                                Padding="3"
                                                Style="{ThemeResource ButtonRevealStyle}"
                                                FontSize="12">
                                            <Button.Background>
                                                <AcrylicBrush TintColor="{ThemeResource SystemAccentColor}"
                                                              TintOpacity="0.7"/>
                                            </Button.Background>

                                            <StackPanel Orientation="Horizontal">
                                                <FontIcon Glyph="&#xE8EC;"
                                                          FontSize="12"
                                                          FontWeight="Medium"
                                                          Margin="0 0 5 0"/>
                                                <TextBlock Text="{x:Bind Name}"
                                                           FontSize="12"
                                                           FontWeight="Medium"/>
                                            </StackPanel>
                                        </Button>
                                        <!--<Grid Margin="0 0 5 0"
                                              Padding="5"
                                              CornerRadius="4">
                                            <Grid.Background>
                                                <RevealBackgroundBrush Color="{ThemeResource SystemAccentColor}" Opacity="0.5"/>
                                            </Grid.Background>
                                            <TextBlock Text="{x:Bind Name}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </Grid>-->
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!--  Open in browser button  -->
                        <Button Grid.Column="2"
                                x:Uid="ArticlePost_OpenInBrowser"
                                Command="{x:Bind OpenFullArticleCommand}"
                                Style="{StaticResource ButtonRevealStyle}"
                                Background="Transparent"
                                Padding="10"
                                Margin="5 5 0 0"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE12B;"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <!--  News Feed loading placeholder grid  -->
        <StackPanel Orientation="Vertical"
                    Visibility="{x:Bind Path=ViewModel.PostsLoading,
                                        Mode=TwoWay,
                                        Converter={StaticResource BoolToVisibilityConverter}}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <muxc:ProgressRing IsActive="True"
                               Margin="10"/>
            <TextBlock x:Uid="NewsFeed_LoadingLabel"
                       FontSize="20"
                       FontWeight="Medium"
                       Margin="5"/>
        </StackPanel>

        <!--  Title grid  -->
        <Grid x:Name="NewsFeedTitleBar"
              Background="{ThemeResource CustomAcrylicElementBrush}"
              VerticalAlignment="Top">
            <TextBlock x:Uid="NewsFeed_NewsFeedTitle"
                       FontSize="30"
                       FontWeight="ExtraBold"
                       Margin="25 30 25 20" />
        </Grid>
    </Grid>
</Page>
