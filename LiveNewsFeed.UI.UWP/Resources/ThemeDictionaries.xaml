<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <Color x:Key="TitleBarButtonsForegroundColor">Black</Color>

            <Color x:Key="CategoryLocalColor">#22769F</Color>
            <Color x:Key="CategoryWorldColor">#915209</Color>
            <Color x:Key="CategoryEconomyColor">#422E4D</Color>
            <Color x:Key="CategorySportColor">#005627</Color>
            <Color x:Key="CategoryArtsColor">#07618D</Color>
            <Color x:Key="CategoryScienceColor">#B51675</Color>
            <Color x:Key="CategoryCommentaryColor">#BF2134</Color>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <Color x:Key="TitleBarButtonsForegroundColor">White</Color>

            <Color x:Key="CategoryLocalColor">#36BCFF</Color>
            <Color x:Key="CategoryWorldColor">#FF9010</Color>
            <Color x:Key="CategoryEconomyColor">#B17BCC</Color>
            <Color x:Key="CategorySportColor">#00D660</Color>
            <Color x:Key="CategoryArtsColor">#0A95D9</Color>
            <Color x:Key="CategoryScienceColor">#FF1F86</Color>
            <Color x:Key="CategoryCommentaryColor">#FF2C45</Color>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
